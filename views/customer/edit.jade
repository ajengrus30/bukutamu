doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .containerHead
        h1 Buku Tamu
    .containerContent
        .titleContent Edit Data
                form.formInput(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                   .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alertdismissable
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label.labelInput
                                        | Name
                                    input(type='text',value="#{data.name}",name='name',placeholder='Enter Name', autofocus).form-control
                                .form-group
                                    label.labelInput
                                        | Address
                                    input(type='text',value="#{ (address == undefined) ? data.address : address }",name='address',placeholder='Enter address').form-control
                                .form-group
                                    label.labelInput
                                        | Email
                                    input(type='text',value="#{ (email ==undefined) ? data.email : email }",name='email',placeholder='Enter Email').form-control
                                .form-group
                                    label.labelInput
                                        | Phone
                                    input(type='text',value="#{ (phone ==undefined) ? data.phone : phone }",name='phone',placeholder='Enter Phone').form-control
                            .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary
                                        | Submit
                               
                                button(href='/customers').btn.btn-Back
                                    | Back